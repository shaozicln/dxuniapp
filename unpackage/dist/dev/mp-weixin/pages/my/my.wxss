
.my-container.data-v-2f1ef635 {
  display: flex;
  flex-direction: column;
  background-color: #f8fef8; 
  min-height: 100vh;
}

/* 个人信息区域 */
.profile-section.data-v-2f1ef635 {
  position: relative;
  width: 100%;
  height: 30vh;
  background: linear-gradient(to bottom, #c9edf5, #f8fef8); 
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 0;
}

/* 头像样式 */
.avatar.data-v-2f1ef635 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #c9edf5; 
  margin-right: 20rpx; 
  object-fit: cover;
}

/* 用户信息包裹层 */
.user-info-wrapper.data-v-2f1ef635 {
  flex: 1;
  display: flex;
  justify-content: flex-start; 
  align-items: center;
}

/* 用户信息内容 */
.user-info.data-v-2f1ef635 {
  display: flex;
  flex-direction: column;
}

/* 昵称样式 */
.nickname.data-v-2f1ef635 {
  font-size: 36rpx;
  font-weight: bold;
  color: #444; 
  text-align: left;
}

/* 描述文本样式 */
.desc.data-v-2f1ef635 {
  font-size: 28rpx;
  color: #777; 
  margin-top: 8rpx;
  text-align: left;
}

/* 消息列表区域 */
.message-section.data-v-2f1ef635 {
  flex: 1;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

/* 板块标题样式 */
.section-title.data-v-2f1ef635 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 10rpx solid #90ee90; 
  padding-left: 10rpx;
}

/* 空列表提示 */
.empty-tip.data-v-2f1ef635 {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 50rpx 0;
}

/* 消息项容器 */
.message-item.data-v-2f1ef635 {
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0; 
  display: flex;
  flex-direction: column;
  transition: background-color 0.2s ease; 
  border: 1px solid #e6e6e6; 
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background-color: #fff;
}

/* 未读消息背景样式 */
.unread.data-v-2f1ef635 {
  background-color: #ffeaea; 
  border-color: #ffcccc;
}

/* 消息标题样式 */
.message-title.data-v-2f1ef635 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 消息内容样式 */
.message-content.data-v-2f1ef635 {
  font-size: 26rpx;
  color: #666; 
  line-height: 1.6; 

  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 操作按钮容器 */
.action-buttons.data-v-2f1ef635 {
  display: flex;
  justify-content: flex-end;
  margin-top: 15rpx;
}

/* 按钮基础样式 */
.btn.data-v-2f1ef635 {
  margin-left: 20rpx;
  padding: 12rpx 24rpx; 
  border-radius: 8rpx;
  font-size: 24rpx; 
  border: none;
}

/* 取消标红按钮样式 */
.cancel-unread.data-v-2f1ef635 {
  background-color: #70d770; 
  color: #fff;
}

/* 删除按钮样式 */
.delete-msg.data-v-2f1ef635 {
  background-color: #f75757; 
  color: #fff;
}

/* 按钮点击反馈 */
.btn.data-v-2f1ef635:active {
  opacity: 0.8;
  transform: scale(0.98);
}
