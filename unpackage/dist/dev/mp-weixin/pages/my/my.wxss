.my-container.data-v-2f1ef635 {
    max-width: 700rpx; /* 限制最大宽度，避免平板端内容过宽 */
    margin: 0 auto; /* 水平居中 */
    box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.02); /* 加外阴影，模拟卡片效果 */
}
.profile-section.data-v-2f1ef635 {
    border-radius: 0 0 36rpx 36rpx; /* 保持顶部通栏，底部圆角 */
}
