
.profile-page.data-v-b99c0b3f {
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 16px;
  padding-bottom: 100rpx;
}
.profile-header.data-v-b99c0b3f {
  height: 200rpx;
  background: linear-gradient(to bottom, #87CEEB, #F5F5F5); 
  position: relative;
  transition: height 0.3s ease;
  padding-top: 40rpx;
}
.back-button.data-v-b99c0b3f {
  position: absolute;
  left: 20rpx; 
  top: 40rpx; 
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2); 
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10; 
  transition: background-color 0.2s;
}
.back-button.data-v-b99c0b3f:active {
  background-color: rgba(255, 255, 255, 0.3);
}
.back-icon.data-v-b99c0b3f {
  color: #fff; 
  font-size: 36rpx;
  font-weight: bold;
}
.avatar-container.data-v-b99c0b3f {
  position: absolute;
  left: 50%;
  bottom: -60rpx;
  transform: translateX(-50%);
  width: 120rpx;
  height: 120rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.avatar.data-v-b99c0b3f {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transition: transform 0.3s ease;
}
.avatar.data-v-b99c0b3f:active {
  transform: scale(0.95);
}
@keyframes fadeIn-b99c0b3f {
from { opacity: 0; transform: translateY(20rpx);
}
to { opacity: 1; transform: translateY(0);
}
}
.info-list.data-v-b99c0b3f {
  margin-top: 80rpx;
  max-width: 700rpx;
  margin-left: auto;
  margin-right: auto;
  padding: 0 30rpx;
  animation: fadeIn-b99c0b3f 0.5s ease;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.info-item.data-v-b99c0b3f {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #eaeaea;
  background-color: #fff;
  transition: background-color 0.2s;
  justify-content: flex-start;
  align-items: center;
}
.editable-item.data-v-b99c0b3f {
  cursor: pointer;
}
.editable-item.data-v-b99c0b3f:active {
  background-color: #fafafa;
}
.info-value-wrap.data-v-b99c0b3f {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 20rpx;
}
.info-label.data-v-b99c0b3f {
  width: 200rpx;
  color: #666;
  padding-left: 20rpx;
  font-weight: normal;
  text-align: left;
}
.info-value.data-v-b99c0b3f {
  color: #333;
  font-weight: 500;
  text-align: left;
}
.edit-arrow.data-v-b99c0b3f {
  color: #ccc;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.info-item.data-v-b99c0b3f:last-child {
  border-bottom: none;
}
.logout-container.data-v-b99c0b3f {
  display: flex;
  flex-direction: column; /* 改为纵向排列：按钮在上，文字在下 */
  justify-content: center;
  margin-top: 60rpx;
  padding: 0 30rpx;
  gap: 15rpx; /* 按钮和文字之间的间距 */
}
.logout-button.data-v-b99c0b3f {
  width: 100%;
  max-width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
  transition: all 0.2s;
}
.logout-button.data-v-b99c0b3f:active {
  background-color: #d9363e;
  transform: scale(0.98);
}
.logout-button.data-v-b99c0b3f::after {
  border: none;
}
.logout-tip.data-v-b99c0b3f {
  font-size: 24rpx; 
  color: #999;
  text-align: center; 
  padding: 0 20rpx;
}
