
.questionnaire-detail-page.data-v-55b47ae9 {
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 16px;
  padding-bottom: 120rpx; /* 预留底部按钮区域 */
}

/* 页面头部样式优化 */
.page-header.data-v-55b47ae9 {
  height: 120rpx;
  background-color: #87CEEB;
  display: flex;
  align-items: center; 
  justify-content: center; 
  padding: 30rpx 30rpx 15rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.back-button.data-v-55b47ae9 {
  position: absolute;
  left: 20rpx; 
  top: 60rpx; 
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2); 
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10; 
  transition: background-color 0.2s;
}
.back-button.data-v-55b47ae9:active {
  background-color: rgba(255, 255, 255, 0.3);
}
.back-icon.data-v-55b47ae9 {
  color: #fff; 
  font-size: 36rpx;
  font-weight: bold;
}

/* 标题样式优化 */
.header-title.data-v-55b47ae9 {
  color: #777; 
  font-size: 36rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  margin-left: -100rpx; /* 抵消返回按钮宽度，标题居中 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 问卷内容区域 */
.questionnaire-content.data-v-55b47ae9 {
  padding: 30rpx;
}
.question-item.data-v-55b47ae9 {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-top: 35rpx;
}
.question-number.data-v-55b47ae9 {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}
.question-text.data-v-55b47ae9 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.6; /* 增加行高，提升阅读体验 */
}
.question-options.data-v-55b47ae9 {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.option-item.data-v-55b47ae9 {
  padding: 25rpx 30rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}
.option-item.selected.data-v-55b47ae9 {
  border-color: #42b983;
  background-color: #e8f5e9;
  color: #42b983;
  position: relative;
}
.option-item.selected.data-v-55b47ae9::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background-color: #42b983;
  border-radius: 3rpx 0 0 3rpx;
}
.option-item.data-v-55b47ae9:active {
  background-color: #f5f5f5;
}

/* 底部操作区 */
.bottom-actions.data-v-55b47ae9 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx; 
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  display: flex;
  justify-content: center; 
  align-items: center;
  z-index: 99;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 提交按钮 */
.submit-btn.data-v-55b47ae9 {
  background-color: #87CEEB; 
  color: #fff;
  border: none;
  border-radius: 10rpx;
  width: auto;
  padding: 25rpx 40rpx; 
  text-align: center;
  font-size: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(135, 206, 235, 0.5); 
  transition: all 0.2s;
}
.submit-btn.data-v-55b47ae9:active {
  background-color: #76b6d9; 
  box-shadow: 0 2rpx 5rpx rgba(135, 206, 235, 0.3);
  transform: scale(0.99);
}

/* 重填按钮 */
.reset-btn.data-v-55b47ae9 {
  width: auto; 
  padding: 25rpx 40rpx; 
  text-align: center;
  color: #87CEEB; 
  border: 1rpx solid #87CEEB;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #fff;
  transition: all 0.2s;
}
.reset-btn.data-v-55b47ae9:active {
  background-color: #e6f2f7; 
  transform: scale(0.99);
}
