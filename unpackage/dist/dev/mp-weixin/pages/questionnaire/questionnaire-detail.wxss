
.questionnaire-detail-page.data-v-55b47ae9 {
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 16px;
  padding-bottom: 140rpx;
}

/* 顶部导航栏样式 */
.page-header.data-v-55b47ae9 {
  height: 120rpx;
  background-color: #87CEEB;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.back-button.data-v-55b47ae9 {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.back-icon.data-v-55b47ae9 {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.header-title.data-v-55b47ae9 {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  max-width: calc(100% - 120rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 问卷内容样式 */
.questionnaire-content.data-v-55b47ae9 {
  padding: 30rpx;
}
.question-item.data-v-55b47ae9 {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.question-number.data-v-55b47ae9 {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}
.question-text.data-v-55b47ae9 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 25rpx;
  line-height: 1.6;
}

/* 单选样式 */
.options-single.data-v-55b47ae9 {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.option-single.data-v-55b47ae9 {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}
.option-single.selected.data-v-55b47ae9 {
  border-color: #42b983;
  background-color: #f6ffed;
}
.radio-marker.data-v-55b47ae9 {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  margin-right: 20rpx;
  position: relative;
}
.option-single.selected .radio-marker.data-v-55b47ae9 {
  border-color: #42b983;
}
.radio-dot.data-v-55b47ae9 {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 16rpx;
  height: 16rpx;
  background-color: #42b983;
  border-radius: 50%;
}

/* 多选样式 */
.options-multiple.data-v-55b47ae9 {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.option-multiple.data-v-55b47ae9 {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}
.option-multiple.selected.data-v-55b47ae9 {
  border-color: #42b983;
  background-color: #f6ffed;
}
.checkbox-marker.data-v-55b47ae9 {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.option-multiple.selected .checkbox-marker.data-v-55b47ae9 {
  background-color: #42b983;
  border-color: #42b983;
}
.check-icon.data-v-55b47ae9 {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

/* 星级评分样式 */
.options-rating.data-v-55b47ae9 {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 10rpx 0;
}
.star-item.data-v-55b47ae9 {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  font-size: 40rpx;
  color: #ccc;
  transition: all 0.2s;
  cursor: pointer;
}
.star-item.selected.data-v-55b47ae9 {
  color: #faad14;
}
.star-text.data-v-55b47ae9 {
  font-size: 22rpx;
  margin-top: 8rpx;
}

/* 滑动条样式（重点修复） */
.options-slider.data-v-55b47ae9 {
  padding: 40rpx 0 20rpx; /* 增加顶部空间容纳气泡 */
  position: relative;
}
.slider-container.data-v-55b47ae9 {
  padding: 0 10rpx;
  position: relative;
  height: 80rpx; /* 增加高度容纳气泡 */
}

/* 滑动提示气泡 */
.slider-tooltip-wrapper.data-v-55b47ae9 {
  position: absolute;
  top: -50rpx; /* 气泡位置 */
  transform: translateX(-50%);
  pointer-events: none;
  z-index: 10;
}
.slider-tooltip.data-v-55b47ae9 {
  background-color: #42b983;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}
.tooltip-arrow.data-v-55b47ae9 {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #42b983;
  margin: 0 auto;
}
slider.data-v-55b47ae9 {
  width: 100%;
  height: 80rpx;
}
.slider-labels.data-v-55b47ae9 {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

